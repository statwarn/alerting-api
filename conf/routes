# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /v1/alerts                 controllers.AlertsController.getAll
GET           /v1/alerts/:alertId        controllers.AlertsController.getById(alertId: java.util.UUID)
POST          /v1/alerts                 controllers.AlertsController.create
PUT           /v1/alerts/:alertId        controllers.AlertsController.update(alertId: java.util.UUID)
DELETE        /v1/alerts/:alertId        controllers.AlertsController.delete(alertId: java.util.UUID)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file              controllers.Assets.at(path="/public", file)
